{#
/**
 * @file
 * Template for the makerspace user links block.
 */
#}
{% if link_groups %}
  <div class="makerspace-user-links">
    {% for group in link_groups %}
      <div class="makerspace-user-links__group">
        {% if group.label %}
          <div class="makerspace-user-links__group-label">{{ group.label }}</div>
        {% endif %}
        <ul class="makerspace-user-links__items">
          {% for link in group.links %}
            <li class="makerspace-user-links__item">
              <div class="makerspace-user-links__item-title">{{ link(link.title, link.url) }}</div>
              {% if link.description %}
                <div class="makerspace-user-links__item-description">{{ link.description }}</div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endfor %}
  </div>
{% else %}
  <div class="makerspace-user-links__empty">{{ 'No admin links available.'|t }}</div>
{% endif %}
